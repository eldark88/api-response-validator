#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
set -vx

bundle install

basedir=$(dirname "$0")

# get bin directory path
pushd `dirname $0` > /dev/null
bindir=`pwd`
popd > /dev/null

# export bin directory
if grep -q 'api-response-validator' ~/.bash_profile
then
  echo "Path already exist in .bash_profile"
else
  echo "export PATH=$bindir:$PATH" >>~/.bash_profile
fi

# Do any other automated setup that you need to do here
